<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_in1">

    <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imageSign_in"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:background="@drawable/foto_atas_login"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="30dp"
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg1_halfrounded_hijau1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint"
            android:text="Get Started Free!"
            android:textSize="38dp"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_under_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Forever. No Credit Card Needed"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/txt_welcome"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/txtbx_email"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:hint="  Yourname@mail.com"
            android:inputType="textEmailAddress"
            android:layout_height="52dp"
            android:selectAllOnFocus="true"
            app:layout_constraintTop_toBottomOf="@id/txt_under_welcome"
            android:background="@drawable/bg5_rounded_putih"/>

        <EditText
            android:id="@+id/txtbx_password"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:hint="  Password"
            android:layout_height="52dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/txtbx_email"
            android:background="@drawable/bg5_rounded_putih"/>

        <EditText
            android:id="@+id/txtbx_confirm_password"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:hint="  Confirm Password"
            android:layout_height="52dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/txtbx_password"
            android:background="@drawable/bg5_rounded_putih"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtbx_confirm_password"
            android:layout_marginTop="50dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>